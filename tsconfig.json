{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "node_modules/vite-plugin-pwa/client.d.ts"],
  "target": "esnext",
  "module": "esnext",
  "compilerOptions": {
    "target": "es5",
    "lib": [ "DOM", "ESNext" ],
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
